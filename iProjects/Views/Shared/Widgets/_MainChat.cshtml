<div class="portlets">
    <div class="col-xs-11 ">
        <div class="widget panel panel-default ">
            <div class="widget-header transparent">
                <h2>
                    <i class="fa fa-comments"> Chat</i>
                </h2>
                <div class="additional-btn">
                    <a href="#" class="hidden reload"><i class="icon-ccw-1"></i></a>
                    <a class="hidden" id="dropdownMenu12" data-toggle="dropdown">
                        <i class="fa fa-cogs"></i>
                    </a>
                    <ul class="dropdown-menu pull-right" role="menu" aria-labelledby="dropdownMenu12">
                        <li><a href="#"><i class="fa fa-refresh fa-fw"></i> Refresh</a></li>
                        <li><a href="#"><i class="fa fa-check-circle fa-fw"></i> Available</a></li>
                        <li><a href="#"><i class="fa fa-times fa-fw"></i> Busy</a></li>
                        <li><a href="#"><i class="fa fa-clock-o fa-fw"></i> Away</a></li>
                        <li class="divider"></li>
                        <li><a href="#"><i class="fa fa-sign-out fa-fw"></i> Sign Out</a></li>
                    </ul>
                    <a href="#" class="widget-popout hidden tt" title="Pop Out/In"><i class="icon-publish"></i></a>
                    <a href="#" class="widget-maximize hidden"><i class="icon-resize-full-1"></i></a>
                    <a href="#" class="widget-toggle"><i class="icon-down-open-2"></i></a>
                    <a href="#" class="widget-close"><i class="icon-cancel-3"></i></a>
                </div>
            </div>

            <div class="panel-heading">
                
                    @*<div class="help-tip">
                            <p>Chat with other users that are online or ask for some help or support!</p>
                        </div>*@
                </div>
                <!-- /.panel-heading -->
            <div class="panel-body">
                <div class="widget-content">
                    <ul class="chat">
                        <li class="left clearfix">
                            <div class="block block-drop-shadow">
                                <div class="container">
                                    <div class="row">
                                        <div class="col-md-4">
                                            <form class="pad-bottom" data-bind="visible: !signedIn(), submit: signIn">
                                                <div class="form-group">
                                                    <label for="username">User Name</label>
                                                    <input class="form-control" type="text" name="username" id="username" placeholder="Enter your userame" />
                                                </div>
                                                <button type="submit" class="btn btn-primary">Enter Chat</button>
                                                <br />
                                            </form>

                                            <div data-bind="visible: signedIn">
                                                <p>
                                                    You are signed in as <strong data-bind="text: username"></strong>
                                                </p>
                                            </div>
                                        </div>
                                        <div class="col-md-8">
                                            <div data-bind="visible: notifications().length > 0, foreach: notifications">
                                                <div class="summary alert alert-success alert-dismissable">
                                                    <button type="button" class="close" data-dismiss="alert" aria-hidden="true">×</button>
                                                    <p data-bind="text: $data"></p>
                                                </div>
                                            </div>

                                            <div class="messages-item-text" data-bind="visible: signedIn">
                                                <form data-bind="submit: writePost">
                                                    <div class="form-group">
                                                        <label for="message">Write a new Message:</label>
                                                        <textarea class="form-control" name="message" id="message" placeholder="New post"></textarea>
                                                    </div>
                                                    <button type="submit" class="btn btn-default">Submit</button>
                                                </form>
                                            </div>

                                            <ul class="posts list-unstyled" data-bind="foreach: posts">
                                                <li>
                                                    <p>
                                                        <span data-bind="text: username" class="username"></span><br />
                                                    </p>
                                                    <p>
                                                        <span class="messages-item-text" data-bind="text: message"></span>
                                                    </p>

                                                    <p class="no-pad-bottom date-posted">Posted <span data-bind="text: moment(date).calendar()"></span></p>

                                                    <div class="messages-item-text" data-bind="visible: $parent.signedIn() || comments().length > 0">
                                                        <ul class="list-unstyled" data-bind="foreach: comments, visible: comments().length > 0">
                                                            <li>

                                                                <p>
                                                                    <span class="commentor" data-bind="text: username"></span>
                                                                    <span class="messages-item-text" data-bind="text: message"></span>
                                                                </p>
                                                                <p class=" no-pad-bottom date-posted">Posted <span data-bind="text: moment(date).calendar()"></span></p>
                                                            </li>
                                                        </ul>

                                                        <form class="add-comment" data-bind="visible: $parent.signedIn, submit: addComment">
                                                            <div class="row">
                                                                <div class="col-md-9">
                                                                    <input type="text" class="form-control" name="comment" placeholder="Reply Message" />
                                                                </div>
                                                                <div class="col-md-3">
                                                                    <button class="btn btn-default" type="submit">Reply</button>
                                                                </div>
                                                            </div>
                                                        </form>
                                                    </div>
                                                </li>
                                            </ul>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </li>
                    </ul>
                </div>
            </div>
            <!-- /.panel-footer -->
        </div>
    </div>
</div>
    <!--Reference the jQuery library. -->
    <script src="~/Scripts/jquery-2.1.3.min.js"></script>

    <!--Reference the SignalR library. -->
    <script src="~/Scripts/jquery.signalR-2.1.2.min.js"></script>

    <!--Reference the autogenerated SignalR hub script. -->
    <script src="signalr/hubs"></script>
    <script src="~/Scripts/knockout-3.2.0.js"></script>
    <script src="~/Scripts/board.js"></script>
    <script src="~/Scripts/moment.js"></script>
