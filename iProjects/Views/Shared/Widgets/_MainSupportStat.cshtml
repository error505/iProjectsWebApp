<div class=" portlets">
    <div class="widget block block-drop-shadow">
        <div class="head bg-dot20">
            <div class="widget-header transparent">
                <div class="additional-btn">
                    <a href="#" class="hidden reload"><i class="icon-ccw-1"></i></a>
                    <a class="hidden" id="dropdownMenu19" data-toggle="dropdown">
                        <i class="fa fa-cogs"></i>
                    </a>
                    <ul class="dropdown-menu pull-right" role="menu" aria-labelledby="dropdownMenu19">
                        <li><a href="#">Action</a></li>
                        <li><a href="#">Another action</a></li>
                        <li><a href="#">Something else here</a></li>
                        <li class="divider"></li>
                        <li><a href="#">Separated link</a></li>
                    </ul>
                    <a href="#" class="widget-popout hidden tt" title="Pop Out/In"><i class="icon-publish"></i></a>
                    <a href="#" class="widget-maximize hidden"><i class="icon-resize-full-1"></i></a>
                    <a href="#" class="widget-toggle"><i class="icon-down-open-2"></i></a>
                    <a href="#" class="widget-close"><i class="icon-cancel-3"></i></a>
                </div>
                <i class="fa fa-support fa-3x "></i>Support
            </div>
            <div class="widget-content">
                <div class="head-subtitle">For all projects</div>
                <div class="head-panel nm tac">
                    <div class="sparkline">
                        <span sparktype="pie" sparkwidth="100" sparkheight="100">@{ Html.RenderAction("Statistics", "BugReports"); },@{ Html.RenderAction("Statistics", "CrashReports"); },@{ Html.RenderAction("Statistics", "SupportTickets"); }</span>
                    </div>
                </div>
                <div class="head-panel nm">
                    <div class="hp-info hp-simple pull-left hp-inline">
                        <span class="hp-main"><span class="fa fa-circle"></span> Bugs Reported [ @{ Html.RenderAction("Statistics", "BugReports"); } ]</span>
                    </div>
                    <div class="hp-info hp-simple pull-left hp-inline">
                        <span class="hp-main"><span class="fa fa-circle text-info"></span> Crashes Reported [ @{ Html.RenderAction("Statistics", "CrashReports"); } ]</span>
                    </div>
                    <div class="hp-info hp-simple pull-left hp-inline">
                        <span class="hp-main"><span class="fa fa-circle text-primary"></span> Support Tickets [ @{ Html.RenderAction("Statistics", "SupportTickets"); } ]</span>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
