<div class="col-lg-3 col-md-6 portlets">
    <div class="panel panel-primary">
        <div class="panel-heading">
            <div class="help-tip">
                <p>View how many projects do you have in database. Add new projects.</p>
            </div>
            <div class="row">
                <div class="col-xs-9 text-left">
                    <div class="left_abs_100" style="margin-top: 20px;">
                        <div class="knob">
                            <input type="text" data-fgcolor="#FFFFFF" data-min="0" data-max="200" data-width="100" data-height="100" value="@{ Html.RenderAction("Statistics", "Projects"); }" data-readonly="true" />
                        </div>
                    </div>
                    <h3>Projects!</h3>
                </div>
                <div class="col-xs-3">
                    <i class="fa fa-cubes fa-5x wtt-mark"></i>
                </div>
            </div>
        </div>
        <a href="#">
            <div class="panel-footer">
                <span class="pull-left">@Html.ActionLink("View Projects", "Index", "Projects")</span>
                <span class="pull-right"><i class="fa fa-arrow-circle-right"></i></span>
                <div class="clearfix"></div>
            </div>
        </a>
    </div>
</div>

