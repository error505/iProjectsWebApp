<div class="col-lg-3 col-md-6 portlets">
    <div class="widget panel panel-warning" style="zoom: 1;">
        <div class=" panel-heading">
            <div class="widget-header transparent">
                <i class="fa fa-tasks"></i>
                <div class="additional-btn">
                    <a href="#" class="hidden reload"><i class="icon-ccw-1"></i></a>
                    <a class="hidden" id="dropdownMenu2" data-toggle="dropdown">
                        <i class="fa fa-cogs"></i>
                    </a>
                    <ul class="dropdown-menu pull-right" role="menu" aria-labelledby="dropdownMenu2">
                        <li><a href="#">Action</a></li>
                        <li><a href="#">Another action</a></li>
                        <li><a href="#">Something else here</a></li>
                        <li class="divider"></li>
                        <li><a href="#">Separated link</a></li>
                    </ul>
                    <a href="#" class="widget-popout hidden tt" title="Pop Out/In"><i class="icon-publish"></i></a>
                    <a href="#" class="widget-maximize hidden"><i class="icon-resize-full-1"></i></a>
                    <a href="#" class="widget-toggle"><i class="icon-down-open-2"></i></a>
                    <a href="#" class="widget-close"><i class="icon-cancel-3"></i></a>
                </div>
            </div>
            @*<div class="help-tip">
                <p>View Tasks that you need to do. Add new Tasks.</p>
            </div>*@
            <div class="widget-content">
                <div class="row">
                    <div class="col-xs-9 text-left">
                        <div class="big"></div>
                        <h1>
                            <b><span id="lines3" class="animate-number" data-value="@{ Html.RenderAction("Statistics", "TasksToDoes"); }" data-duration="1000"></span></b>
                        </h1>
                        <h3>Project Tasks!</h3>
                    </div>
                    <div class="col-xs-3">
                        <i class="fa fa-tasks fa-5x wtt-mark"></i>
                    </div>
                </div>
            </div>
            </div>
        <a href="#">
            <div class="panel-footer">
                <span class="pull-left">@Html.ActionLink("View Tasks", "Index", "TasksToDoes")</span>
                <span class="pull-right"><i class="fa fa-arrow-circle-right"></i></span>
                <div class="clearfix"></div>
            </div>
        </a>
    </div>
</div>
<script>
    $("#lines3").animateNumber({ number: $("#lines3").attr("data-value") });
</script>

