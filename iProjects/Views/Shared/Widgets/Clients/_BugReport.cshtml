<div class="col-lg-3 col-md-6 portlets">
    <div class="panel panel-danger">
        <div class="panel-heading">
            <div class="help-tip">
                <p>Add Bug Report if you found one.</p>
            </div>
            <div class="row">
                <div class="col-xs-9 text-left">
                    <div class="left_abs_100" style="margin-top: 20px;">
                        <div class="knob">
                            <input type="text" data-fgcolor="#FFFFFF" data-min="0" data-max="200" data-width="100" data-height="100" value="@{ Html.RenderAction("Statistics", "BugReports"); }" data-readonly="true" />
                        </div>
                    </div>
                    <h3>Bug Report</h3>
                </div>
                <div class="col-xs-3">
                    <i class="fa fa-bug fa-5x wtt-mark"></i>
                </div>
            </div>
        </div>
        <a href="#">
            <div class="panel-footer">
                <span class="pull-left">@Html.ActionLink("Create Bug Report", "Create", "BugReports")</span>
                <span class="pull-right"><i class="fa fa-arrow-circle-right"></i></span>
                <div class="clearfix"></div>
            </div>
        </a>
    </div>
</div>


